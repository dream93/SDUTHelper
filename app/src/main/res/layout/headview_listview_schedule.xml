<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/item_schedule_list_0"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textColor="@color/colorBlack"
            android:maxLines="3"
            android:text="节次"
            android:ellipsize="end"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/colorBlack"/>
        <TextView
            android:id="@+id/item_schedule_list_1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="星期一"
            android:textColor="@color/colorBlack"
            android:ellipsize="end"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/colorBlack"/>
        <TextView
            android:id="@+id/item_schedule_list_2"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="星期二"
            android:textColor="@color/colorBlack"
            android:ellipsize="end"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/colorBlack"/>
        <TextView
            android:id="@+id/item_schedule_list_3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:text="星期三"
            android:textColor="@color/colorBlack"
            android:ellipsize="end"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/colorBlack"/>
        <TextView
            android:id="@+id/item_schedule_list_4"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:ellipsize="end"
            android:text="星期四"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/colorBlack"/>
        <TextView
            android:id="@+id/item_schedule_list_5"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="星期五"
            android:textColor="@color/colorBlack"
            android:ellipsize="end"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/colorBlack"/>
        <TextView
            android:id="@+id/item_schedule_list_6"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="星期六"
            android:textColor="@color/colorBlack"
            android:ellipsize="end"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/colorBlack"/>
        <TextView
            android:id="@+id/item_schedule_list_7"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="星期日"
            android:textColor="@color/colorBlack"
            android:ellipsize="end"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"/>

</LinearLayout>